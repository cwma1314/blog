/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.news-item-title {
  font-size: 30rpx;
  margin-top: 10px;
}
.news-item-lisnter{
  font-size: 12px;
  color: #d0d0d0;
  height: 30px;
  margin-top: 20px;
}
.news-item-topic{
  font-size: 13px;
  color: #76787e;
}
.news-item-left{
  width: 100%;
  margin-left: 10rpx;
}
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar
{
width: 0px;
height: 0px;
background-color: #ffffff;
}
.hidden {
  display: none;
}
.cs-progress{
  margin-top: 36rpx;
  margin-bottom: 20rpx;
} 
.cs-text{
  font-size: 12px;
  color: #6E6E6E;
}
.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}
.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 2px;
  padding-top: 2px;
  padding-right: 2px;
  padding-bottom: 2px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}
.news-image {
  width: 240rpx;
  height: 240rpx;
}