/* 表单类通用 表单类通用 表单类通用*/

.subClass_btn2 {
  margin-top: 40rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: #00a2ea;
}

.radio-group {
  display: flex;
  flex-direction: column;
  justify-content: start;
  margin-right: 15px;
}

.radio-group .radio_lable {
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  border: 2rpx solid #aaa6a6;
  padding: 4px;
  border-radius: 4px;
}
.rowCenter {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -10rpx;
  left: 0;
}

.movable-view {
  width: 92rpx;
  height: 34rpx;
  background: #00a2ea;
  box-shadow: 0px 10rpx 30rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice {
  margin-top: 66rpx;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
}

.voice view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #4a4a4a;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.voice view image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.voice progress {
  width: 100%;
}

