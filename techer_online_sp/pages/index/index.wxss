/**index.wxss**/

.banners {
  width: 100%;
  height: 200px;
}

.banner {
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  color: #fff;
  position: absolute;
  width: 100%;
  padding-left: 16px;
  padding-right: 16px;
  bottom: 30px;
  font-size: 16px;
  left: 0;
}

.sub-title {
  color: #76787e;
  height: 46px;
  padding: 0 16px;
  width: 100%;
  font-size: 30rpx;
  padding-left: 16px;
  padding-right: 16px;
}
.sub-title-right{
  float: right;
  font-size: 28rpx;
  padding-top: 4px;
  padding-right: 12px;
  color: #00a2ea;
  cursor: pointer;
}

.category-image {
  width: 50px;
  height: 44px;
}
.sub-title-spilt-left{
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #00a2ea;
  cursor: pointer;
  font-weight: bolder;
}
 
